doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title Todolist using Mongo
    style.
      body{
      background-color: rgb(172, 172, 72);
      margin: 0;
      }
      body h1 {
      color: lavender;
      }
      table,tr,th,td {
      border: 1px solid rgb(207, 202, 202);
      border-collapse: collapse;
      text-align: center;
      }
      table tr:nth-child(even) {
      background-color: indigo;
      color: lightgrey;
      }
      table tr:nth-child(odd){
      background-color: rgb(45, 128, 85);
      color: lightgrey;
      }
      table th {
      background-color: rgb(97, 111, 126);
      color: white;
      }
      table {
      border-radius: 1em;
      overflow: hidden;
      }
      h4 a{
      text-decoration: none;
      color: rgb(197, 56, 56);
      }
      .main {
      width: 60%;
      margin-left: auto;
      margin-right: auto;
      margin-top:5%;
      text-align: center;
      padding-bottom: 4%;
      }
      .main table {
      margin-left: auto;
      margin-right: auto;
      }
      button {
      background-color: rgb(216, 65, 65);
      color: rgb(228, 220, 220);
      border-radius: 2.5px;
      border:1px solid rgb(236, 77, 77);
      padding: 5px;
      padding-left: 7px;
      margin-right:5px;
      padding-right: 7px;
      }
      input {
      font-size: 20px;
      background-color: rgb(241, 187, 187);
      border: 1px solid rgb(241, 187, 187);
      border-radius: 3px;
      }
  body
    .main
      h1 Edit Todo
      form(action='saveTodo' method="POST")
        table(width='400', cellpadding='10')
          thead
            tr
              th
                | Title
              th
                input(type='text', name='taskn' value=Taskn )
          tbody
            tr
              th
                | Task
              td
                input(type='text', name='taskd' value=Taskd)
        br
        a(href='#')
          button
            strong Reset
        a(href='#')
          button
            strong Save
